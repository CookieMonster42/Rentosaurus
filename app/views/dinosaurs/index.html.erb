<div class="">
  <div class="d-flex p-0">
    <div class="container bg-white">
        <%= link_to "add a dino", new_dinosaur_path %>
        <% @dinosaurs.each  do |dino| %>
          <%= link_to dinosaur_path(dino.id) do %>
            <%= render 'shared/card_dino', dino: dino %>
          <% end %>
        <% end %>
    </div>
    <div
      id="map"
      style="width: 100%;
      height: 600px;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
      class="container bg-primary"
    ></div>
  </div>
</div>
